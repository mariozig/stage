<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center">Choose Images</h1>

    <%= form_with(model: submission, local: true) do |form| %>
      <% if submission.errors.any? %>
        <div id="error_explanation">
          <h5><%= pluralize(submission.errors.count, "error") %> prohibited this submission from being saved:</h5>

          <ul>
            <% submission.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= form.text_area :description, autofocus: true, class: 'form-control', placeholder: "Describe your submission" %>
      </div>
      
      <div class="form-group">
        <%= form.file_field :files, autofocus: false, class: 'form-control', multiple: true %>
      </div>

      <div class="form-group">
        <%= form.email_field :email, autofocus: false, class: 'form-control', placeholder: "Email Address" %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>

  </div>
</div>
